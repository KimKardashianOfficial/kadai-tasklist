<h1>タスク新規作成ページ</h1>


  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
    <%= form_for(@task) do |f| %>
      <% if @task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :conetent, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :status, '状態' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit '投稿', class: 'btn btn-primary' %>
      <!--%= link_to '一覧に戻る', tasks_path ,class: "btn btn-primary" %-->
      <%= link_to '一覧に戻る', user_path(current_user) ,class: "btn btn-primary" %>
    <% end %>
  </div>

  
