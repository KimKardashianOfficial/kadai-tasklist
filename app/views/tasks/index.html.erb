<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>状態</th>
      </tr>
    </thead>
    <tbody>
      <div class="row">
        <div class="col-xs-12">
          <% @tasks.each do |message| %>
            <tr>
            <td><%= link_to message.id, message %></td>
              <td><%= message.content %></td>
              <td><%= message.status %></td>
            </tr>
          <% end %>
        </div>
      </div>
    </tbody>
  </table>

<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>